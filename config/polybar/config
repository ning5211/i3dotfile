  foreground           = #c7c8f7
  foreground-alt       = #555
  primary              = #ffb52a
  secondary            = #e60053
  alert                = #bd2c40
  purple               = #bd93f9


[global/wm]
  margin-top           = 5
  margin-bottom        = 5


;# # # # # # # # # # 
[bar/top]
  ;polybar -m 查看显示器名称
  monitor = ${env:MONITOR}
  monitor-strict = true
  dpi = 98
  bottom = false
  width = 100%
  height = 24
  offset-x = 0
  offset-y = 0
  
