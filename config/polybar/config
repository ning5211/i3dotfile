  foreground = ${colors.foreground}
  
  overline-size = 0
  overline-color = #f00
  underline-size = 2
  underline-color = #00f
  
  border-bottom-size = 0
  border-bottom-color = ${colors.background}
  
  spacing = 1
  padding-left = 0
